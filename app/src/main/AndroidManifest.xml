        <activity
            android:name=".DrawerActivity"
            android:label="@string/app_name" ></activity>
        <activity android:name=".GalleryViewPager">
        </activity>
        <activity android:name=".LogoutActivity">
        </activity>
        <activity android:name=".Register"
            android:label="Register">
        </activity>
    </application>

</manifest>
