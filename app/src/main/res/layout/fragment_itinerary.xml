<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.iidea8.k_lit.ItineraryActivity">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/ib_day1"
            android:layout_width="fill_parent"
            android:layout_height="250sp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:onClick="onClick_day1"
            android:src="@drawable/day_1" />

        <ImageButton
            android:id="@+id/ib_day2"
            android:layout_width="fill_parent"
            android:layout_height="250sp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/day_2"
            android:onClick="onClick_day2"/>

        <ImageButton
            android:id="@+id/ib_day3"
            android:layout_width="fill_parent"
            android:layout_height="250sp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/day_3"
            android:onClick="onClick_day3"/>

        <ImageButton
            android:id="@+id/ib_day4"
            android:layout_width="fill_parent"
            android:layout_height="300sp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/day_4"
            android:onClick="onClick_day4"/>

        <ImageButton
            android:id="@+id/ib_day5"
            android:layout_width="fill_parent"
            android:layout_height="300sp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/day_5"
            android:onClick="onClick_day5"/>
    </LinearLayout>

</ScrollView>
