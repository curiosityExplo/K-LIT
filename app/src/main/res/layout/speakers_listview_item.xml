<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_speaker"
        android:layout_width="140sp"
        android:layout_height="180sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_speaker_name"
        android:layout_below="@+id/iv_speaker"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_speaker_bio"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/iv_speaker"
        android:layout_toRightOf="@+id/iv_speaker"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/iv_speaker"/>

</RelativeLayout>